# Server
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database - PostgreSQL
# Para desenvolvimento local:
# DATABASE_URL=postgresql://user:password@localhost:5432/horizon_ai
#
# Para Supabase:
# DATABASE_URL=postgresql://[user]:[password]@db.[project-id].supabase.co:5432/postgres
DATABASE_URL=postgresql://user:password@localhost:5432/horizon_ai

# Alternativamente, você pode usar variáveis separadas (útil para CI/secret rotation):
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=postgres
# DATABASE_PASSWORD=postgres
# DATABASE_NAME=horizon_ai

# Supabase granular (se preferir não usar DATABASE_URL diretamente):
# SUPABASE_DB_HOST=db.[project-id].supabase.co
# SUPABASE_DB_PORT=5432
# SUPABASE_DB_USER=postgres
# SUPABASE_DB_PASSWORD=your-supabase-db-password
# SUPABASE_DB_NAME=postgres

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production
JWT_REFRESH_EXPIRATION=30d

# Cookies
COOKIE_MAX_AGE=604800000
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# CORS
CORS_ORIGIN=http://localhost:8801,http://localhost:3000

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here_change_in_production